RewriteEngine On
RewriteBase /ecomind-events/

# Redirect root to events page
RewriteRule ^$ index.php?page=events [L]

# Short URLs for common pages
RewriteRule ^events$ index.php?page=events [L]
RewriteRule ^event/([0-9]+)$ index.php?page=events&id=$1 [L]
RewriteRule ^proposer$ index.php?page=proposer [L]
RewriteRule ^inscription/([0-9]+)$ index.php?page=inscription&id=$1 [L]

# Admin short URLs
RewriteRule ^admin$ index.php?page=admin_dashboard [L]
RewriteRule ^admin/dashboard$ index.php?page=admin_dashboard [L]
RewriteRule ^admin/events$ index.php?page=admin_events [L]
RewriteRule ^admin/inscriptions$ index.php?page=admin_inscriptions [L]
RewriteRule ^admin/propositions$ index.php?page=admin_propositions [L]

# Pass through existing files and directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?page=$1 [L,QSA]
